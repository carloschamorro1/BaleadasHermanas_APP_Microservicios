<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    tools:context=".Empleados">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imv_segundoApellidoEmpleado"
            app:layout_constraintTop_toBottomOf="@+id/imv_segundoApellidoEmpleado">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/txt_primerNombreEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:digits="abcdefghijklmnñopqrstuvxwyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZÁÉÍÓÚáéíóúäëïöüÄËÏÖÜ"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/primerNombre"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintBottom_toTopOf="@+id/imv_segundoNombreEmpleado"
                app:layout_constraintStart_toEndOf="@+id/imv_primerNombreEmpleado" />

            <TextView
                android:id="@+id/txv_labelNombreUsuarioEmpleados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/nombreUsuario"
                android:textColor="#020202"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imv_iconoUsuario_empleados"
                app:layout_constraintStart_toEndOf="@+id/imv_iconoUsuario_empleados" />

            <ImageView
                android:id="@+id/imv_iconoUsuario_empleados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/txv_tituloEmpleados"
                app:srcCompat="@drawable/profile" />

            <EditText
                android:id="@+id/txt_primerApellidoEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/primerApellido"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_segundoNombreEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_segundoNombreEmpleado" />

            <EditText
                android:id="@+id/txt_segundoApellidoEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/segundoApellido"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_primerApellidoEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_primerApellidoEmpleado" />

            <EditText
                android:id="@+id/txt_telefonoEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/telefono"
                android:inputType="phone"
                android:maxLength="8"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_segundoApellidoEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_segundoApellidoEmpleado" />

            <EditText
                android:id="@+id/txt_emailEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_telefonoEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_telefonoEmpleado" />

            <EditText
                android:id="@+id/txt_dniEmpledo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/dni"
                android:inputType="number"
                android:maxLength="13"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_emailEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_emailEmpleado" />

            <EditText
                android:id="@+id/txt_usuarioEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/usuario"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_dniEmpledo"
                app:layout_constraintTop_toBottomOf="@+id/txt_dniEmpledo" />

            <Button
                android:id="@+id/btn_GuardarEmpleado"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="71dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/disquete"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_ActualizarEmpleado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_ActualizarEmpleado"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_ActualizarEmpleado"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="42dp"
                android:background="@drawable/updating"
                android:backgroundTint="@color/black"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_BorrarEmpleado"
                app:layout_constraintEnd_toStartOf="@+id/btn_BorrarEmpleado"
                app:layout_constraintStart_toEndOf="@+id/btn_GuardarEmpleado"
                app:layout_constraintTop_toTopOf="@+id/btn_BorrarEmpleado"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_BorrarEmpleado"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/delete"
                android:backgroundTint="@color/black"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_buscarEmpleado"
                app:layout_constraintEnd_toStartOf="@+id/btn_buscarEmpleado"
                app:layout_constraintStart_toEndOf="@+id/btn_ActualizarEmpleado"
                app:layout_constraintTop_toTopOf="@+id/btn_buscarEmpleado"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_buscarEmpleado"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/lupa"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_BorrarEmpleado"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

            <EditText
                android:id="@+id/txt_segundoNombreEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:digits="abcdefghijklmnñopqrstuvxwyz ABCDEFGHIJKLMNÑOPQRSTUVWXYZÁÉÍÓÚáéíóúäëïöüÄËÏÖÜ"
                android:ems="10"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/segundoNombre"
                android:inputType="textPersonName"
                android:maxLength="40"
                android:minHeight="48dp"
                android:textColorHint="#000000"
                app:layout_constraintStart_toStartOf="@+id/txt_primerNombreEmpleado"
                app:layout_constraintTop_toBottomOf="@+id/txt_primerNombreEmpleado" />

            <TextView
                android:id="@+id/txv_tituloEmpleados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="89dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="44dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/empleados"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/btn_menuPrincipalEmpleados"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imv_primerNombreEmpleado"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/icono"
                app:layout_constraintBottom_toBottomOf="@+id/txt_primerNombreEmpleado"
                app:layout_constraintEnd_toEndOf="@+id/imv_segundoNombreEmpleado"
                app:layout_constraintStart_toStartOf="@+id/imv_segundoNombreEmpleado"
                app:layout_constraintTop_toTopOf="@+id/txt_primerNombreEmpleado"
                app:srcCompat="@drawable/name" />

            <ImageView
                android:id="@+id/imv_primerApellidoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/icono"
                app:layout_constraintEnd_toStartOf="@+id/txt_primerApellidoEmpleado"
                app:layout_constraintTop_toTopOf="@+id/txt_primerApellidoEmpleado"
                app:srcCompat="@drawable/name2" />

            <ImageView
                android:id="@+id/imv_segundoApellidoEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="7dp"
                android:contentDescription="@string/icono"
                app:layout_constraintBottom_toBottomOf="@+id/txt_segundoApellidoEmpleado"
                app:layout_constraintEnd_toStartOf="@+id/txt_segundoApellidoEmpleado"
                app:srcCompat="@drawable/name2" />

            <ImageView
                android:id="@+id/imv_telefonoEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/icono"
                app:layout_constraintEnd_toStartOf="@+id/txt_telefonoEmpleado"
                app:layout_constraintTop_toTopOf="@+id/txt_telefonoEmpleado"
                app:srcCompat="@drawable/phone_call" />

            <ImageView
                android:id="@+id/imv_emailEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/icono"
                app:layout_constraintEnd_toStartOf="@+id/txt_emailEmpleado"
                app:layout_constraintTop_toTopOf="@+id/txt_emailEmpleado"
                app:srcCompat="@drawable/email" />

            <ImageView
                android:id="@+id/imv_dniEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/icono"
                app:layout_constraintEnd_toStartOf="@+id/txt_dniEmpledo"
                app:layout_constraintTop_toTopOf="@+id/txt_dniEmpledo"
                app:srcCompat="@drawable/id_card" />

            <ImageView
                android:id="@+id/imv_usuarioEmpleado"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:contentDescription="@string/icono"
                app:layout_constraintBottom_toBottomOf="@+id/txt_usuarioEmpleado"
                app:layout_constraintEnd_toEndOf="@+id/imv_dniEmpleado"
                app:layout_constraintStart_toStartOf="@+id/imv_dniEmpleado"
                app:layout_constraintTop_toTopOf="@+id/txt_usuarioEmpleado"
                app:srcCompat="@drawable/man_user" />

            <ImageView
                android:id="@+id/imv_contraseñaEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="11dp"
                android:contentDescription="@string/icono"
                app:layout_constraintEnd_toStartOf="@+id/textInputLayout2"
                app:layout_constraintTop_toTopOf="@+id/textInputLayout2"
                app:srcCompat="@drawable/candado_cerrado" />

            <ImageView
                android:id="@+id/imv_segundoNombreEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="238dp"
                android:contentDescription="@string/icono"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/name" />

            <Button
                android:id="@+id/btn_menuPrincipalEmpleados"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/home_icon_silhouette"
                app:layout_constraintBottom_toTopOf="@+id/imv_iconoUsuario_empleados"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txv_tituloEmpleados"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="223dp"
                android:layout_height="50dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="77dp"
                android:layout_marginBottom="76dp"
                app:endIconMode="password_toggle"
                app:layout_constraintBottom_toBottomOf="@+id/btn_ActualizarEmpleado"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_dniEmpledo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_contraseñaEmpleado"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:hint="@string/contraseña"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>